    "express-async-errors": "^3.1.1",
    "http-status": "^1.7.4",
    "joi": "^17.13.3",
    "prisma": "^6.8.2",
    "supertest": "^7.1.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
